    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "esbuild": "^0.25.9",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "next": "^15.5.0",
    "next-seo": "^6.8.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12"
  }
