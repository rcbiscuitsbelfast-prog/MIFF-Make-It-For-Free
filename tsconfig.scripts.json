{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist-scripts",
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "node",
		"isolatedModules": true,
		"noEmit": false,
		"declaration": false,
		"emitDeclarationOnly": false,
		"jsx": "preserve"
	},
	"include": [
		"scripts/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"coverage"
	]
}