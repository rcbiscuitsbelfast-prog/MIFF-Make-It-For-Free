{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"outDir": "./dist",
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"verbatimModuleSyntax": true,
		"lib": ["ES2020", "DOM"],
		"declaration": false,
		"sourceMap": false
	},
	"include": [
		"./**/*.ts"
	],
	"exclude": [
		"./tests/**/*",
		"./dist/**/*"
	]
}