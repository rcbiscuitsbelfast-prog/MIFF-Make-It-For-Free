    "dialogueTree": {
      "start": {
        "text": "I am the Echo of Elara, lingering in the Grove’s heart. The legacies of past tamers call. Will you seek the Emberfang’s fire, Mosshide’s root, or Cloudtail’s wind?",
        "choices": [
          {
            "choiceId": "c1_emberfang",
            "text": "I seek the Emberfang’s legacy.",
            "next": "emberfang_path",
            "effect": { "questActivated": "echoes_emberfang" }
          },
          {
            "choiceId": "c1_mosshide",
            "text": "I seek the Mosshide’s legacy.",
            "next": "mosshide_path",
            "effect": { "questActivated": "echoes_mosshide" }
          },
          {
            "choiceId": "c1_cloudtail",
            "text": "I seek the Cloudtail’s legacy.",
            "next": "cloudtail_path",
            "effect": { "questActivated": "echoes_cloudtail" }
          },
          {
            "choiceId": "c1_decline",
            "text": "I’m not ready to choose.",
            "next": "decline",
            "end": true
          }
        ]
