---
export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { title, description = "Modular, CLI-first, engine-agnostic game development framework", image, canonical } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const basePath = import.meta.env.BASE_URL || '/';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${basePath}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {canonical && <link rel="canonical" href={canonical} />}
    {image && <meta property="og:image" content={image} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {image && <meta name="twitter:image" content={image} />}
  </head>
  <body class="bg-white dark:bg-gray-900">
    <div class="min-h-screen flex">
      <!-- Sidebar -->
      <aside class="w-64 bg-gray-50 dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 fixed h-full overflow-y-auto">
        <div class="p-4">
          <div class="flex items-center space-x-2 mb-6">
            <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
              <span class="text-white font-bold text-sm">M</span>
            </div>
            <span class="text-xl font-bold text-gray-900 dark:text-white">MIFF</span>
          </div>
          
          <nav class="space-y-2">
            <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Getting Started</div>
            <a href={`${basePath}getting-started/install`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Installation</a>
            <a href={`${basePath}getting-started/simulate`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Simulate Tool</a>
            <a href={`${basePath}getting-started/replay`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Replay Tool</a>
            <a href={`${basePath}getting-started/inspect`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Inspect Tool</a>
            
            <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2 mt-6">Demos</div>
            <a href={`${basePath}demos/tutorial`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Tutorial Scenario</a>
            <a href={`${basePath}demos/combat`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Combat Scenario</a>
            
            <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2 mt-6">Modules by Domain</div>
            <a href={`${basePath}#phase-1-4-core-gameplay`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Core Gameplay</a>
            
            <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2 mt-6">Scenario Packs</div>
            <a href={`${basePath}contributors/roadmap#-demos`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Tutorial & Combat</a>
            
            <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2 mt-6">Engine Bridges</div>
            <a href={`${basePath}getting-started/replay#engine`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Unity / Web / Godot</a>
            
            <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2 mt-6">Visual Tools</div>
            <a href={`${basePath}getting-started/replay`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Render Replay</a>
            <a href={`${basePath}getting-started/inspect`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Bridge Inspector</a>
            
            <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2 mt-6">Contributors</div>
            <a href={`${basePath}contributors/onboarding`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Onboarding</a>
            <a href={`${basePath}contributors/licensing`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Licensing</a>
            <a href={`${basePath}contributors/roadmap`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Roadmap</a>
            
            <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2 mt-6">API Reference</div>
            <a href={`${basePath}api/cli`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">CLI Reference</a>
            <a href={`${basePath}api/schema`} class="block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">Schema Reference</a>
          </nav>
        </div>
      </aside>

      <!-- Main content -->
      <main class="flex-1 ml-64">
        <!-- Header -->
        <header class="bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700 px-6 py-4">
          <div class="flex items-center justify-between">
            <div>
              <h1 class="text-2xl font-bold text-gray-900 dark:text-white">{title}</h1>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Build modular games with AI prompts. Remix-safe. Engine-agnostic. Contributor-first.</p>
            </div>
            <div class="flex items-center space-x-4">
              <a href="https://github.com/miff-framework" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
              <button id="theme-toggle" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                </svg>
              </button>
            </div>
          </div>
        </header>

        <!-- Content -->
        <div class="px-6 py-8">
          <article class="prose prose-lg dark:prose-invert max-w-none">
            <slot />
          </article>
        </div>

        <!-- Footer -->
        <footer class="bg-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 px-6 py-8 mt-12">
          <div class="max-w-7xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">MIFF Framework</h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm">
                  Modular, CLI-first, engine-agnostic game development framework built for contributors.
                </p>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Resources</h3>
                <ul class="space-y-2 text-sm">
                  <li><a href={`${basePath}contributors/onboarding`} class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">Contributor Guide</a></li>
                  <li><a href={`${basePath}contributors/roadmap`} class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">Roadmap</a></li>
                  <li><a href={`${basePath}getting-started/install`} class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">Getting Started</a></li>
                </ul>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Community</h3>
                <ul class="space-y-2 text-sm">
                  <li><span class="text-gray-600 dark:text-gray-400">Maintainer: R.C. Biscuits</span></li>
                  <li><span class="text-gray-600 dark:text-gray-400">License: AGPLv3 + commercial</span></li>
                  <li><a href="https://github.com/miff-framework/miff" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">GitHub Repo</a></li>
                  <li><a href={`${basePath}`} class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">Docs Home</a></li>
                </ul>
              </div>
            </div>
            <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700">
              <p class="text-center text-gray-600 dark:text-gray-400 text-sm">
                Â© 2024 MIFF Framework. Licensed under AGPL-3.0 (commercial licenses available).
              </p>
            </div>
          </div>
        </footer>
      </main>
    </div>

    <script>
      // Theme toggle functionality
      const themeToggle = document.getElementById('theme-toggle');
      const html = document.documentElement;
      
      // Check for saved theme preference or default to 'light'
      const currentTheme = localStorage.getItem('theme') || 'light';
      html.classList.toggle('dark', currentTheme === 'dark');
      
      themeToggle.addEventListener('click', () => {
        const newTheme = html.classList.contains('dark') ? 'light' : 'dark';
        html.classList.toggle('dark');
        localStorage.setItem('theme', newTheme);
      });

      // Active navigation highlighting
      const currentPath = window.location.pathname;
      const navLinks = document.querySelectorAll('nav a');
      
      navLinks.forEach(link => {
        if (link.getAttribute('href') === currentPath) {
          link.classList.add('bg-blue-100', 'dark:bg-blue-900', 'text-blue-700', 'dark:text-blue-300');
        }
      });
    </script>
  </body>
</html>