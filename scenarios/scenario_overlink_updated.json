{
  "schema": "v14",
  "name": "Overlink Zone Orchestration",
  "version": "1.0.0",
  "author": "MIFF Framework",
  "license": "MIT",
  "remixSafe": true,
  "description": "Comprehensive orchestration for Overlink zone with all Pure modules integrated",
  
  "zones": [
    {
      "id": "hub",
      "name": "Central Hub",
      "tags": ["meta", "transition", "navigation"],
      "description": "Main navigation hub connecting all demo zones"
    },
    {
      "id": "toppler",
      "name": "Toppler Demo",
      "tags": ["physics", "puzzle", "standalone"],
      "description": "Physics-based puzzle game with remix-safe architecture"
    },
    {
      "id": "spirit_tamer",
      "name": "Spirit Tamer",
      "tags": ["rpg", "combat", "capture"],
      "description": "RPG combat system with spirit capture mechanics"
    },
    {
      "id": "preview",
      "name": "Remix Preview",
      "tags": ["meta", "preview", "integration"],
      "description": "Meta zone for previewing and integrating remixed content"
    },
    {
      "id": "debug",
      "name": "Debug Zone",
      "tags": ["meta", "debug", "development"],
      "description": "Development and debugging zone with enhanced tooling"
    }
  ],

  "modules": [
    {
      "moduleId": "toppler_demo",
      "name": "Toppler Demo",
      "type": "physics_puzzle",
      "zone": "toppler",
      "status": "active",
      "dependencies": [],
      "path": "games/toppler/",
      "fixtures": [
        "TopplerDemoPure/fixtures/toppler.golden.json",
        "TopplerDemoPure/fixtures/topplerDemo.golden.json"
      ],
      "capabilities": ["physics", "collision", "input", "rendering"],
      "remixSafe": true
    },
    {
      "moduleId": "spirit_tamer_demo",
      "name": "Spirit Tamer",
      "type": "rpg_combat",
      "zone": "spirit_tamer",
      "status": "active",
      "dependencies": [],
      "path": "SpiritTamerDemoPure/",
      "fixtures": [
        "SpiritTamerDemoPure/fixtures/spiritTamer.golden.json"
      ],
      "capabilities": ["combat", "inventory", "quests", "dialogue"],
      "remixSafe": true
    },
    {
      "moduleId": "remix_preview",
      "name": "Remix Preview",
      "type": "meta_preview",
      "zone": "preview",
      "status": "inactive",
      "dependencies": ["toppler_demo", "spirit_tamer_demo"],
      "path": "OverlinkPure/",
      "fixtures": [
        "OverlinkPure/golden_fixture_audio.json",
        "OverlinkPure/tests/golden_output.json"
      ],
      "capabilities": ["preview", "integration", "orchestration"],
      "remixSafe": true
    },
    {
      "moduleId": "quest_system",
      "name": "Quest System",
      "type": "quest_management",
      "zone": "hub",
      "status": "active",
      "dependencies": [],
      "path": "systems/QuestSystemPure/",
      "fixtures": [
        "systems/QuestSystemPure/fixtures/quest_events.json"
      ],
      "capabilities": ["quest_tracking", "progress_management", "reward_system"],
      "remixSafe": true
    },
    {
      "moduleId": "dialogue_system",
      "name": "Dialogue System",
      "type": "conversation",
      "zone": "hub",
      "status": "active",
      "dependencies": [],
      "path": "systems/DialogueSystemPure/",
      "fixtures": [
        "systems/DialogueSystemPure/fixtures/dialogue.json"
      ],
      "capabilities": ["conversation_trees", "npc_interaction", "quest_triggers"],
      "remixSafe": true
    },
    {
      "moduleId": "combat_system",
      "name": "Combat System",
      "type": "battle_engine",
      "zone": "spirit_tamer",
      "status": "active",
      "dependencies": ["quest_system"],
      "path": "CombatPure/",
      "fixtures": [
        "CombatPure/expected_output.json",
        "CombatScenarioPure/scenario.json"
      ],
      "capabilities": ["turn_based_combat", "damage_calculation", "status_effects"],
      "remixSafe": true
    },
    {
      "moduleId": "inventory_system",
      "name": "Inventory System",
      "type": "item_management",
      "zone": "hub",
      "status": "active",
      "dependencies": [],
      "path": "InventoryPure/",
      "fixtures": [
        "InventoryPure/expected_output.json"
      ],
      "capabilities": ["item_storage", "equipment_management", "loot_integration"],
      "remixSafe": true
    },
    {
      "moduleId": "audio_system",
      "name": "Audio System",
      "type": "sound_management",
      "zone": "hub",
      "status": "active",
      "dependencies": [],
      "path": "AudioMixerPure/",
      "fixtures": [
        "AudioMixerPure/expected_output.json"
      ],
      "capabilities": ["music_playback", "sound_effects", "audio_binding"],
      "remixSafe": true
    }
  ],

  "triggers": [
    {
      "id": "zone_transition",
      "type": "zone_change",
      "fromZone": "hub",
      "toZone": "toppler",
      "conditions": [
        { "type": "flag", "key": "toppler_unlocked", "equals": true }
      ],
      "effects": [
        { "type": "overlay", "action": "fadeIn", "duration": 1000 },
        { "type": "questAdvance", "questId": "zone_exploration", "step": 1 }
      ]
    },
    {
      "id": "quest_start",
      "type": "quest_trigger",
      "zone": "hub",
      "conditions": [
        { "type": "requiresItem", "itemId": "quest_scroll", "quantity": 1 }
      ],
      "effects": [
        { "type": "questAdvance", "questId": "main_story", "step": 1 },
        { "type": "dialog", "dialogId": "quest_intro" }
      ]
    },
    {
      "id": "combat_initiate",
      "type": "combat_trigger",
      "zone": "spirit_tamer",
      "conditions": [
        { "type": "flag", "key": "in_combat_zone", "equals": true }
      ],
      "effects": [
        { "type": "overlay", "action": "flash", "color": "#ff0000", "duration": 500 },
        { "type": "questAdvance", "questId": "combat_training", "step": 1 }
      ]
    }
  ],

  "objectives": [
    {
      "id": "zone_exploration",
      "title": "Zone Exploration",
      "description": "Explore all available zones in the Overlink system",
      "steps": [
        {
          "id": "visit_hub",
          "description": "Visit the Central Hub",
          "completed": false,
          "triggers": ["zone_transition"]
        },
        {
          "id": "visit_toppler",
          "description": "Experience the Toppler physics demo",
          "completed": false,
          "triggers": ["zone_transition"]
        },
        {
          "id": "visit_spirit_tamer",
          "description": "Try the Spirit Tamer RPG demo",
          "completed": false,
          "triggers": ["zone_transition"]
        }
      ],
      "rewards": [
        { "type": "xp", "amount": 100 },
        { "type": "item", "id": "explorer_badge", "amount": 1 }
      ]
    },
    {
      "id": "module_integration",
      "title": "Module Integration",
      "description": "Successfully integrate and test all Pure modules",
      "steps": [
        {
          "id": "test_quest_system",
          "description": "Test the quest system functionality",
          "completed": false,
          "triggers": ["quest_start"]
        },
        {
          "id": "test_combat_system",
          "description": "Test the combat system mechanics",
          "completed": false,
          "triggers": ["combat_initiate"]
        },
        {
          "id": "test_audio_system",
          "description": "Test audio system integration",
          "completed": false,
          "triggers": ["audio_test"]
        }
      ],
      "rewards": [
        { "type": "xp", "amount": 200 },
        { "type": "item", "id": "integration_master", "amount": 1 }
      ]
    }
  ],

  "routing": {
    "defaultZone": "hub",
    "zoneConnections": [
      {
        "from": "hub",
        "to": "toppler",
        "requirements": { "flag": "toppler_unlocked", "value": true }
      },
      {
        "from": "hub",
        "to": "spirit_tamer",
        "requirements": { "flag": "spirit_tamer_unlocked", "value": true }
      },
      {
        "from": "hub",
        "to": "preview",
        "requirements": { "quest": "zone_exploration", "status": "completed" }
      },
      {
        "from": "toppler",
        "to": "hub",
        "requirements": {}
      },
      {
        "from": "spirit_tamer",
        "to": "hub",
        "requirements": {}
      },
      {
        "from": "preview",
        "to": "hub",
        "requirements": {}
      }
    ],
    "fallbackZone": "hub",
    "errorHandling": {
      "invalidZone": "hub",
      "missingModule": "hub",
      "connectionError": "hub"
    }
  },

  "drawReducers": [
    {
      "id": "sprite_renderer",
      "type": "sprite",
      "priority": 1,
      "enabled": true,
      "data": { "batchSize": 100, "textureAtlas": "main" }
    },
    {
      "id": "ui_renderer",
      "type": "ui",
      "priority": 10,
      "enabled": true,
      "data": { "theme": "default", "scale": 1.0 }
    },
    {
      "id": "effect_renderer",
      "type": "effect",
      "priority": 5,
      "enabled": true,
      "data": { "particleCount": 50, "blendMode": "additive" }
    },
    {
      "id": "debug_renderer",
      "type": "debug",
      "priority": 100,
      "enabled": false,
      "data": { "showFPS": true, "showBounds": false }
    }
  ],

  "assetBindings": [
    {
      "id": "main_textures",
      "type": "texture",
      "path": "assets/textures/main.atlas",
      "remixSafe": true,
      "fallback": "assets/textures/fallback.png"
    },
    {
      "id": "transition_shader",
      "type": "shader",
      "path": "assets/shaders/transition.glsl",
      "remixSafe": true,
      "fallback": "assets/shaders/basic.glsl"
    },
    {
      "id": "audio_bindings",
      "type": "audio",
      "path": "OverlinkPure/assets/audioBindings.json",
      "remixSafe": true,
      "fallback": "assets/audio/silence.mp3"
    }
  ],

  "overlayLayers": {
    "debug": false,
    "ui": true,
    "transition": true,
    "preview": false,
    "navigation": true,
    "quest": true,
    "inventory": true,
    "combat": false
  },

  "remixConfig": {
    "enableLineageTracking": true,
    "enableRemixMode": true,
    "enableThemes": true,
    "enableAudio": true,
    "enableBadges": true,
    "defaultTheme": "neonGrid",
    "remixOrigin": "MIFF Framework",
    "versioning": "semantic",
    "compatibility": ["v13", "v14"]
  },

  "metadata": {
    "lastUpdated": "2024-12-19",
    "totalModules": 8,
    "totalZones": 5,
    "totalTriggers": 3,
    "totalObjectives": 2,
    "remixSafety": "verified",
    "testCoverage": "comprehensive",
    "documentation": "complete"
  }
}